<specification>
<!-- Cart -->
<list name="cart" class="cartitem" iterator="cart.products">
<param name="name"/>
<param name="price" class="txt-price" filter="currency"/>
<param name="qty" class="quantity" field="quantity"/>
</list>
<value name="subtotal" class="cart-subtotal" field="cart.subtotal"
       filter="currency"/>
<value name="cart-shipping" field="cart_shipping" filter="currency"/>
<value name="cart-tax" field="cart_tax" filter="currency"/> 
<value name="total" class="cart-total" field="cart.total" filter="currency"/>

<container name="signin" value="!session.logged_in_user"/>

<form name="checkout" class="account-info">
<!-- Email -->
<field name="email" id="inputEmail"/>
<!-- Shipping -->
<field name="first_name" id="inputFirstName"/>
<field name="last_name" id="inputLastName"/>
<field name="company" id="inputCompany"/>
<field name="address" id="inputAddress"/>
<field name="address_2" id="inputAddress2"/>
<field name="city" id="inputCity"/>
<field name="state" id="inputState" iterator="states"
       iterator_value_key="state_iso_code" iterator_name_key="name" 
       keep="empty_value"/>
<field name="postal_code" id="inputPostalCode"/>
<field name="country" id="inputCountry" iterator="countries"
       iterator_value_key="country_iso_code" iterator_name_key="name"/>
<field name="phone" id="inputPhone"/>
<!-- Billing -->
<field name="billing_enabled" id="inputBillingEnabled"/>
<field name="billing_email" id="inputBillingEmail"/>
<field name="billing_first_name" id="inputBillingFirstName"/>
<field name="billing_last_name" id="inputBillingLastName"/>
<field name="billing_company" id="inputBillingCompany"/>
<field name="billing_address" id="inputBillingAddress"/>
<field name="billing_address_2" id="inputBillingAddress2"/>
<field name="billing_city" id="inputBillingCity"/>
<field name="billing_state" id="inputBillingState" iterator="states" iterator_value_key="state_iso_code" iterator_name_key="name"/>
<field name="billing_country" id="inputBillingCountry" iterator="countries" iterator_value_key="country_iso_code" iterator_name_key="name"/>
<!-- Payment -->
<field name="card_number" id="inputCardNumber"/>
<field name="card_month" id="inputCardMonth" iterator="card_months"/>
<field name="card_year" id="inputCardYear" iterator="card_years"/>
<field name="card_cvc" id="inputCardCVC"/>

<!-- Or paypal -->
<field name="payment_method" class="payment-method" />

</form>
<!-- Email errors -->
<value name="email_error" id="errorEmail"
       field="errors.email" op="toggle"/>
<!-- Shipping field errors -->
<value name="first_name_error" id="errorFirstName"
       field="errors.first_name" op="toggle"/>
<value name="last_name_error" id="errorLastName"
       field="errors.last_name" op="toggle"/>
<value name="address_error" id="errorAddress"
       field="errors.address" op="toggle"/>
<value name="city_error" id="errorCity"
       field="errors.city" op="toggle"/>
<value name="postal_code_error" id="errorPostalCode"
       field="errors.postal_code" op="toggle"/>
<value name="phone_error" id="errorPhone"
       field="errors.phone" op="toggle"/>

<!-- Credit card errors -->
<value name="card_number_error" id="errorCardNumber"
       field="errors.card_number" op="toggle"/>
<value name="card_expire_error" id="errorCardExpire"
       field="errors.card_month" op="toggle"/>
<value name="card_cvc" id="errorCardCVC"
       field="errors.card_cvc" op="toggle"/>

<!-- PayPal errors -->

<container id="errorPayPal" value="paypal_exception" />
<value name="paypal_exception" class="error-paypal-body" />

