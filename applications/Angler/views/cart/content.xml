<specification>
<list name="cart" class="cartitem" iterator="cart">
<param name="name"/>
<param name="price" filter="currency"/>
<param name="qty" field="quantity"/>
<param name="subtotal" filter="currency"/>
<param name="remove-cart-product" field="sku" target="value"/>
</list>

<list name="cart_image" class="cartimage" iterator="image">
<param name="src"/>
<param name="name" class="image-name" target="title"/>
</list>


