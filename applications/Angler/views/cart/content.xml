<form name="cart" target="name" id="form-cart">
<field name="country" iterator="countries" iterator_value_key="country_iso_code" iterator_name_key="name"/> 
<field name="state" iterator="states" iterator_value_key="states_id" iterator_name_key="name"/>
<field name="shipping_method" iterator="shipping_methods"
       iterator_value_key="name" iterator_name_key="title"  />
<field name="postal_code" id="postal_code"/>
</form>

<container name="shipping-rates" value="shipping_rates">
  <list name="shipping-rate" iterator="shipping_rates">
    <param name="shipping-rate-rate" field="rate" />
    <param name="shipping-rate-carrier" field="carrier" />
    <param name="shipping-rate-service" field="service" />
  </list>
</container>



