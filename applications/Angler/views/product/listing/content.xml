<specification>
<!-- breadcrumbs -->
<value name="name" class="category-name" field="navigation.name"/>
<value name="uri" class="category-name" field="navigation.uri" target="href"/>


<value name="page_total" class="page-total" field="pager.total_entries"/>
<value name="first" class="page-first" field="paging.first"/>
<value name="last" class="page-last" field="paging.last"/>

<!-- next and prev paging -->
<container name="page-next-container" value="paging.next_url">
<value name="next" class="page-next" field="paging.next_url" target="href" op="append" />
</container>

<container name="page-prev-container" value="paging.prev_url">
<value name="prev" class="page-prev" field="paging.prev_url" target="href" op="append" />
</container>

<container name="pagination" value="paging.last">
<list name="page-list" iterator="paging.pages">
<param name="name" class="page-link"/>
<param name="uri" class="page-link" toggle="href" target="href"/>
</list>
</container>


<list name="results" class="product-box" iterator="products">
<param name="sku"/>
<param name="info-link" class="product-more-info" field="sku" target="action" op="append"/>
<param name="name" class="product-name"/>
<param name="price" class="product-price"/>
<param name="image" class="product-image" target="src"/>
<param name="name" class="product-image" target="alt"/>
</list>
<!-- Paging 
<paging name="products" list="results" class="pagination">
<element name="previous" type="previous" class="previous"/>
<element name="next" type="next" class="paging-next"/>
<element name="last" type="last" class="paging-last"/>
<element name="standard" type="standard" class="standard"/>
<element name="active" type="active" class="selected"/>
-->
<!-- Brands -->
<list name="brands" class="brand-list" iterator="brands">
<param name="name" class="brand-link"/>
<param name="uri" class="brand-link" target="src"/>
</list>

<!-- Breadcrumbs -->
<list name="breadcrumbs" class="crumbs" iterator="breadcrumbs">
<separator name="sep"/>
<param name="name" class="breadcrumb-link"/>
<param name="uri" class="breadcrumb-link" target="href" op="append"/>
</list>

</specification>
