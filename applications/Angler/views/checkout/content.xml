<specification>
<!-- Main Cart -->
<list name="cart" iterator="cart">
    <param name="name"  class="item-name"/>
    <param name="price" class="item-price" filter="currency"/>
    <param name="qty" class="item-quantity" field="quantity"/>
    <param name="subtotal" class="item-subtotal" filter="currency"/>
</list>

<!-- Add Sidebar Cart -->
<value name="sidebar-cart-overview" include="../components/widgets/cart_overview_sidebar.html"/>
<value name="subtotal" class="cart-subtotal" field="cart_subtotal"
       filter="currency"/>
<!--
<value name="cart-shipping" field="cart_shipping" filter="currency"/>
<value name="cart-tax" field="cart_tax" filter="currency"/>
-->

<value name="total" class="cart-total" field="cart_total" filter="currency"/>

<container name="signin" value="!session.logged_in_user"/>

<form name="checkout" class="account-info">
    <field name="email" id="inputEmail"/>
    <!-- Billing -->
    <field name="billing_first_name" id="inputBillingFirstName"/>
    <field name="billing_last_name" id="inputBillingLastName"/>
    <field name="billing_company" id="inputBillingCompany"/>
    <field name="billing_address" id="inputBillingAddress"/>
    <field name="billing_address_2" id="inputBillingAddress2"/>
    <field name="billing_city" id="inputBillingCity"/>
    <field name="billing_phone" id="inputBillingPhone"/>
    <field name="billing_fax" id="inputBillingFax"/>
    <field name="billing_state" id="inputBillingState" iterator="states" iterator_value_key="states_id" iterator_name_key="name"/>
    <field name="billing_postal_code" id="inputBillingPostalCode"/>
    <field name="billing_country" id="inputBillingCountry" iterator="countries" iterator_value_key="country_iso_code" iterator_name_key="name"/>
    <!-- Shipping -->
    <field name="shipping_enabled" id="inputShippingEnabled"/>
    <field name="first_name" id="inputFirstName"/>
    <field name="last_name" id="inputLastName"/>
    <field name="company" id="inputCompany"/>
    <field name="address" id="inputAddress"/>
    <field name="address_2" id="inputAddress2"/>
    <field name="city" id="inputCity"/>
    <field name="state" id="inputState" iterator="states"
       iterator_value_key="states_id" iterator_name_key="name"
       keep="empty_value"/>
    <field name="country" id="inputCountry" iterator="countries"
       iterator_value_key="country_iso_code" iterator_name_key="name"/>
    <field name="postal_code" id="inputPostalCode"/>
    <field name="phone" id="inputPhone"/>
    <field name="fax" id="inputFax"/>
    <!-- Payment -->
    <field name="card_name" id="inputCardName"/>
    <field name="card_number" id="inputCardNumber"/>
    <field name="card_month" id="inputCardMonth" iterator="card_months"/>
    <field name="card_year" id="inputCardYear" iterator="card_years"/>
    <field name="card_cvc" id="inputCardCVC"/>
    <field name="payment_method" id="inputPaymentMethod" />

    <!-- barfing field name="shipping_method" iterator="shipping_rates" /-->
</form>

<!-- Email errors -->
<value name="email_css_error" field="errors.email_input" target="class" class="email" op="append" joiner=" "/>
<value name="email_error" id="errorEmail"
      field="errors.email" op="toggle"/>
<!-- Billing field errors -->
<!-- Billing FirstName -->
<value name="billing_first_name_css_error" field="errors.billing_first_name_input" target="class" class="billing_first_name" op="append" joiner=" "/>
<value name="billing_first_name_error" id="errorBillingFirstName"
       field="errors.billing_first_name" op="toggle"/>
<!-- Billing LastName -->
<value name="billing_last_name_css_error" field="errors.billing_last_name_input" target="class" class="billing_last_name" op="append" joiner=" "/>
<value name="billing_last_name_error" id="errorBillingLastName"
       field="errors.billing_last_name" op="toggle"/>
<!-- Billing Company -->
<value name="billing_company_css_error" field="errors.billing_company_input" target="class" class="billing_company" op="append" joiner=" "/>
<value name="billing_company_error" id="errorBillingCompany"
       field="errors.billing_company" op="toggle"/>
<!-- Billing Address -->
<value name="billing_address_css_error" field="errors.billing_address_input" target="class" class="billing_address" op="append" joiner=" "/>
<value name="billing_address_error" id="errorBillingAddress"
       field="errors.billing_address" op="toggle"/>
<!-- Billing City -->
<value name="billing_city_css_error" field="errors.billing_city_input" target="class" class="billing_city" op="append" joiner=" "/>
<value name="billing_city_error" id="errorBillingCity"
       field="errors.billing_city" op="toggle"/>
<!-- Billing PostalCode -->
<value name="billing_postal_code_css_error" field="errors.billing_postal_code_input" target="class" class="billing_postal_code" op="append" joiner=" "/>
<value name="billing_postal_code_error" id="errorBillingPostalCode"
       field="errors.billing_postal_code" op="toggle"/>
<!-- Billing PostalCode -->
<value name="billing_phone_css_error" field="errors.billing_phone_input" target="class" class="billing_phone" op="append" joiner=" "/>
<value name="billing_phone_error" id="errorBillingPhone"
       field="errors.billing_phone" op="toggle"/>

<!-- Shipping field errors -->
<value name="first_name_error" id="errorFirstName"
       field="errors.first_name" op="toggle"/>
<value name="last_name_error" id="errorLastName"
       field="errors.last_name" op="toggle"/>
<value name="address_error" id="errorAddress"
       field="errors.address" op="toggle"/>
<value name="city_error" id="errorCity"
       field="errors.city" op="toggle"/>
<value name="postal_code_error" id="errorPostalCode"
       field="errors.postal_code" op="toggle"/>
<value name="phone_error" id="errorPhone"
       field="errors.phone" op="toggle"/>

<!-- Payment Method errors -->
<value name="payment_method_css_error" field="errors.payment_method_input" target="class" class="payment_method" op="append" joiner=" "/>
<value name="payment_method_error" id="errorPaymentMethod"
       field="errors.payment_method" op="toggle"/>

<!-- Credit Card errors-->
<value name="card_name_error" id="errorCardName"
       field="errors.card_name" op="toggle"/>
<value name="card_number_error" id="errorCardNumber"
       field="errors.card_number" op="toggle"/>
<value name="card_expire_error" id="errorCardExpire"
       field="errors.card_month" op="toggle"/>
<value name="card_cvc" id="errorCardCVC"
       field="errors.card_cvc" op="toggle"/>

<!-- PayPal errors
<container id="errorPayPal" value="paypal_exception" />
<value name="paypal_exception" class="error-paypal-body" />
-->
</specification>
