<specification>
<form name="registration" link="name">
<field name="first_name" id="first_name"/>
<field name="last_name" id="last_name"/>
<field name="email" id="email"/>
<field name="password" id="password"/>
<field name="confirm_password" id="confirm_password"/>
</form>

<!-- Alerts -->
<container name="alert" class="alert" value="alerts">
<value name="alert" field="alerts.alert-class" target="class" op="append" />
<value name="alert-notice" field="alerts.alert-notice" />
<value name="alert-msg" field="alerts.alert-msg" op="hook" />
</container>

<value name="form-errors" field="errors" op="toggle" />

<value name="password_error" id="errorPassword"
field="errors.password" op="toggle"/>

</specification>
