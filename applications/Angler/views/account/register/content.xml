<specification>
<form name="registration" link="name">
<field name="first_name"/>
<field name="last_name"/>
<field name="email"/>
<field name="password"/>
<field name="confirm_password"/>
</form>

<!-- Alerts -->
<container name="alert" class="alert" value="alerts">
<value name="alert" field="alerts.alert-class" target="class" op="append" />
<value name="alert-notice" field="alerts.alert-notice" />
<value name="alert-msg" field="alerts.alert-msg" op="hook" />
</container>

<value name="form-errors" field="errors" op="toggle" />
<list name="error-email" iterator="errors.email">
<param name="value" class="email-msg"/>
</list>
<list name="error-password" iterator="errors.password">
<param name="value" class="password-msg"/>
</list>
<list name="error-confirm_password" iterator="errors.confirm_password">
<param name="value" class="verify-msg"/>
</list>
</specification>
