my $merch = $schema->resultset('MerchandisingProduct')->populate([
                                           { 
                                             sku => 'WBA0003', 
                                             sku_related => 'WBA1001',
                                             type => 'related' 
                                           },
                                           {
                                             sku => 'WBA0003',
