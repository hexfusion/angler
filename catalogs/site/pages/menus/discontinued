   <table>
   [query sql="select SUM(variants.quantity), pages.header_text as text, pages.url as link, pages.link_icon as image
from variants, pages, products
Where  pages.discontinued = '1' and pages.inactive <> '1' and products.prod_group = pages.prod_group and pages.category='' and products.merchandising = 'discontinued'  and products.inactive <> '1' and variants.sku = products.sku
Group By pages.header_text, pages.url"
         type=list
         more=0
           ml=1000]
           
      [list]
      <tr>
      <td>
      <a href="/[sql-param link]"><img src="[sql-param image]" alt="Socks" border="0" height="50" width="50" align="absmiddle"></a><a href="/[sql-param link]">[sql-param text]</a>
      [/list]
      </td>
      </tr>
    [/query]
    </table>