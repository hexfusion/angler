[comment]
This code autogenerates meta data for search pages
Keuwords are basically a list of products
[/comment]
[query prefix="s3" sql="SELECT discontinued, gender, prod_group, category, manufacturer FROM pages WHERE pid='[scratch page_id]'" type="list" more_routine="paging"]
[s3-list]

[tmp meta_keywords][loop prefix=keywords search="

                fi=products 
                st=db 
                co=1
                
[if-s3-param ! discontinued]			
                sf=merchandising
		        se=discontinued
                op=ne
	            nu=0
[else]
	sf=merchandising
		se=Discontinued
		op=rm
		nu=0
[/else]        
[/if-s3-param] 

[if-s3-param gender]
                sf=gender
                se=[s3-param gender]
                op=rm
                nu=0
[/if-s3-param]       
                sf=bounce
                op=rm
                se=none
                nu=0
				
[if-s3-param prod_group]
                sf=prod_group
                se=[s3-param prod_group]
                op=rm
                nu=0
[/if-s3-param]

[if-s3-param category]
                sf=category
                se=[s3-param category]
                op=rm
                nu=0
[/if-s3-param]

[if-s3-param manufacturer]
                sf=manufacturer
                se=[s3-param manufacturer]
                op=rm
                nu=0
[/if-s3-param]
                ml=50              
                tf=price
                to=nr

[/s3-list]
[/query]
             
"][filter namecase][keywords-data products description][/filter], [/loop][/tmp]
[tmp search_meta_keywords][scratch meta_keywords][/tmp]

[tmp meta_description]Category: [data table=pages column=category key="[scratch page_id]"] Models: [scratch filter='95' name='search_meta_keywords']...[/tmp]
[tmp page_title][data table=pages column=meta_title key="[scratch page_id]"][/tmp]
